{
  "name": "brukertest-portal",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --inspect=0.0.0.0:9229 ./src/index.ts",
    "dev:docker": "docker-compose -f docker-compose.yml -f docker-compose-dev.yml up -d db && ts-node-dev -r tsconfig-paths/register --respawn --inspect=0.0.0.0:9229 ./src/index.ts",
    "build": "NODE_ENV=production tsc --project ./tsconfig.prod.json && tsc-alias",
    "prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:locally": "docker-compose --env-file .env.test -f docker-compose.yml -f docker-compose-test.yml up -d testdb && jest --runInBand --watch",
    "check-types": "tsc",
    "lint": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navikt/brukertest-portal.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/navikt/brukertest-portal/issues"
  },
  "homepage": "https://github.com/navikt/brukertest-portal#readme",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.23",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.0.4",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.16.4",
    "helmet": "^4.6.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.34",
    "yarn": "^1.22.10"
  }
}
